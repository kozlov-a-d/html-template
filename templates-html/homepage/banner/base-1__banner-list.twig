<!-- banner-list -->
<div class="banner-list js-banner-list">

    <div class="banner-list__header">
        <div class="banner-list__title">
            <h2>Акции</h2>
        </div>
        <div class="banner-list__nav nav-arrow">
            <button class="banner-list__nav-btn nav-arrow__btn -prev js-nav-prev">prev</button>
            <button class="banner-list__nav-btn nav-arrow__btn -next js-nav-next">next</button>
        </div>
    </div>

    <div class="banner-list__container">
        <div class="banner-list__carousel owl-carousel">
            {% for item in banners %}
            <div class="banner-list__item">
                <a href="" class="banner-list__item-img"><img src="{{ item.img }}" alt="{{ item.title }}" title="{{ item.title }}"></a>
                <div class="banner-list__item-text">
                    <a href="" class="banner-list__item-title">{{ item.title }}</a>
                    <p>{{ item.text }}</p>
                </div>
            </div> 
            {% endfor %}
        </div>
    </div>
</div>
<!-- end banner-list END -->